<!DOCTYPE html>

<html lang="en">

    <head>

        <%- include('../partials/head'); %>
        <script src="/scripts/Account.js"></script>
        <title>Account</title>

    </head>

    <body id = "Account">
        <!-- Navbar and (Logo) -->
        <div class="nav-container">
            
            <%- include('../partials/nav'); %>
            
        </div>

        <!-- Account page -->
        <main id="account-page">
            <div class="formcontainer">
                <h1 class="intro">My Account</h1>
                <h2 id="quotemsg">Here are your quotes:</h2>
                <ul>
                    <% for (let quote of user.quotes) { %>
                        <li>
                            <p><%= quote.name %></p>
                            <p><a href="/ChangeQuote/<%=quote._id%>">Edit</a></p>
                            <button type="button" onclick= <%="deleteQuote('" + quote._id + "')" %> >Delete Quote</button>
                        </li>
                    <% } %>    
                </ul>    
            </div>
        </main>

        <!-- Extra Stuff -->
        <div class="footer-container">

            <%- include('../partials/footer'); %>
    
        </div>
    </body>

</html>